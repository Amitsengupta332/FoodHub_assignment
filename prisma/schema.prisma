generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Category {
  id   String @id @default(uuid())
  name String @unique

  meals Meal[]
}

model Meal {
  id          String  @id @default(uuid())
  name        String
  price       Float
  image       String
  description String?

  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])

  createdAt DateTime @default(now())
}


